<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :status %><br>
    <%= form.number_field :status %>
  </div>
  
  <div class="field">
    <%= form.label :priority %>
    <%= form.number_field :priority %>
  </div>
  <div class="find">
		<% @categories = Category.all %>
		<%= select :todo, :category_id, @categories.map{|t| [t.name, t.id]} %>
	</div> 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
